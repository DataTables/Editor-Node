{
	"extends": "tslint:recommended",
	"rules": {
		"prefer-const": false,
		"quotemark": "single",
		"one-line": [
            "check-catch",
            "check-finally",
            "check-open-brace",
            "check-whitespace"
        ],
		"only-arrow-functions": false,
		"trailing-comma": false,
		"indent": ["tabs"],
    	"variable-name": [
            "ban-keywords",
            "check-format",
            "allow-pascal-case",
			"allow-leading-underscore"
        ]
	}
}

